<% @page_title = nil %>

<header class="page-header">
	<%= content_tag :h2, "#{@user.email}'s Favorites" %>
</header>

<div class="row">
	<div class="col-sm-8 col-md-9">
		<p>
			<ul class="nav nav-tabs">
				<%= content_tag :li, link_to('Favorites', user_path(@user)), class: (params[:feat_fav_stars].present? ? nil : 'active') %>
				<%= content_tag :li, link_to('Featuring Favorite Stars', user_path(@user, feat_fav_stars: true)), class: (params[:feat_fav_stars].present? ? 'active' : nil) %>
			</ul>
		</p>
		<% if @videos.any? %>
		<%= render template: 'videos/index', layout: false %>
		<% else %>
		<p class="text-center lead">
			<% unless params[:feat_fav_stars].present? %>
			This user has not Favorited any <%= link_to 'Videos', videos_path %>
			<% else %>
			This user has not Favorited any <%= link_to 'Stars', stars_path %>
			<% end %>
		</p>
		<% end %>
	</div>
	<div class="col-sm-4 col-md-3">
		<div class="panel panel-danger">
			<header class="panel-heading text-center">
				Favorite Stars
			</header>
			<ul class="list-group">
				<%= render(@stars) || content_tag(:li, 'This user has not Favorited any Stars.', class: 'list-group-item text-center') %>
			</ul>
		</div>
	</div>
</div>
