<% @page_title = nil %>

<header class="page-header">
	<%= content_tag :h2, "#{@user.email}'s Favorites" %>
</header>

<div class="row">
	<div class="col-sm-8 col-md-9">
		<%= render template: 'videos/index', layout: false %>
	</div>
	<div class="col-sm-4 col-md-3">
		<div class="panel panel-danger">
			<header class="panel-heading">
				<h4 class="panel-title text-center">Favorite Stars</h4>
			</header>
			<ul class="list-group">
				<%= render(@stars) || content_tag(:li, 'This user has not Favorited any Stars.', class: 'list-group-item text-center') %>
			</ul>
		</div>
	</div>
</div>
