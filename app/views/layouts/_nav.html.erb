<% inverse ||= false -%>

<nav class="navbar <%= inverse ? 'navbar-inverse' : 'navbar-default' -%>" style="border-radius: 0;">
	<div class="container">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse-1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand visible-xs-block" href="/"><%= @brand -%></a>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="main-navbar-collapse-1">

			<ul class="nav navbar-nav">
				<%= content_tag :li, link_to(fa_icon('home', text: 'Home'), root_url) -%>
				<%= content_tag :li, link_to(fa_icon('film', text: 'Videos'), videos_path) -%>
			</ul>

			<ul class="nav navbar-nav navbar-right">
				<%= content_tag :li, link_to(fa_icon('heart', text: 'Favorites'), user_favorites_path(current_user)) if user_signed_in? -%>
				<li>
					<%= link_to_unless user_signed_in?, fa_icon('sign-in', text: 'Sign In'), new_user_session_path, title: 'Sign In' do -%>
					<%= link_to fa_icon('sign-out', text: 'Sign Out'), destroy_user_session_path, method: :delete, title: 'Sign Out' -%>
					<% end -%>
				</li>
			</ul>

		</div><!-- /.navbar-collapse -->
	</div><!-- /.container-fluid -->
</nav>