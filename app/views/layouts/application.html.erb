<!DOCTYPE html>
<html>
<head>

	<title>YourFavorite</title>
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
	<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
	<![endif]-->

	<%= yield :head %>
</head>
<body>

	<%= render 'layouts/nav' %>
	<%#= render 'layouts/gallery_modal' %>

	<%= yield :pre_container %>

	<div class="container">
		<%= yield %>
	</div>

	<%= yield :post_container %>

	<!-- Video Modal -->
	<div class="modal fade modal-refresh" id="defaultModal" tabindex="-1" role="dialog" aria-labelledby="defaultModalLabel"></div>

	<!-- Gallery Modal -->
	<div class="modal fade modal-refresh" id="gallery-modal" tabindex="-1" role="dialog" aria-labelledby="gallery-modal-label"></div>

	<%= render 'layouts/footer_nav' %>

</body>
</html>
