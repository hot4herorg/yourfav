<h1>Your Favorites</h1>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th>Video Title</th>
				<th>Site</th>
			</tr>
		</thead>

		<tbody>
			<% @favorites.each do |favorite| %>
			<tr>
				<td><%= toggle_favorite_link(favorite.video, false) -%></td>
				<td><%= link_to favorite.video.try(:title), video_path(favorite.video, modal: true), data: {toggle: :modal, target: '#defaultModal'} %></td>
				<td><%= favorite.video.site.domain -%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<%= link_to 'New Favorite', new_user_favorite_path(@user) %>
