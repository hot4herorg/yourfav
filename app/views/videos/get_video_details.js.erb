if (<%= @video.valid? %>) {

	// form fields
	$('#video_url').val('<%= j @video.url.to_s %>');
	$('#video_key').val('<%= j @video.key.to_s %>');
	$('#video_title').val('<%= j @video.title.to_s %>');
	$('#video_site_id').val('<%= j @video.site_id.to_s %>');
	$('#video_thumb_url').val('<%= j @video.thumb_url.to_s %>');

	// iframe source
	$('#video_src').attr('src', '<%= j @video.embed_code.to_s %>');

	// thumbnails
	<% @video.thumb_array.each do |thumb| %>
	$('#video_thumbs').append( $('<img class="img-responsive col-xs-3">').attr('src', '<%= j thumb %>') );
	<% end if @video.thumb_array.any? %>

} else {
	$('#new_video')[0].reset();
}
