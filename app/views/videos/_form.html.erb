<%= form_for(@video) do |f| %>
<% if @video.errors.any? %>
<div id="error_explanation">
	<strong><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</strong>

	<ul>
		<% @video.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :url %><br>
	<%= f.text_field :url, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :key %><br>
	<%= f.text_field :key, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :title %><br>
	<%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :site_id %><br>
	<%= f.select :site_id, Site.all.collect{ |s| [s.name, s.id] }, {include_blank: true}, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :thumb_url %><br>
	<%= f.text_field :thumb_url, class: 'form-control' %>
</div>

<%= content_tag :p, link_to('Generate Thumbnails', generate_thumbs_video_path(@video), class: 'btn btn-info btn-sm') if @video.persisted? %>

<div class="form-group">
	<%= f.label :star_tokens, 'Stars' %><br>
	<%= f.text_field :star_tokens, class: 'form-control', data: {load: @video.stars} %>
</div>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-warning btn-block' %>
</div>
<% end %>
