<%= form_for(@video) do |f| %>
<% if @video.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

	<ul>
		<% @video.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="row">

	<div class="col-sm-8 col-sm-push-4">
		<div class="form-group">
			<%= f.label :scrapee_url, 'URL' %>
			<%= f.text_field :scrapee_url, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :key %>
			<%= f.text_field :key, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :site_id %>
			<%= f.number_field :site_id, class: 'form-control' %>
		</div>
	</div>

	<div class="col-sm-4 col-sm-pull-8">
		<div class="panel panel-default">
			<header class="panel-heading">
				<h4 class="panel-title">Thumbnails</h4>
			</header>
			<ul id="nested_thumbnails" class="list-group">
				<%= f.fields_for :thumbnails do |pic| -%>
				<%= render 'form_thumbs', f: pic -%>
				<% end -%>
			</ul>
			<footer class="panel-footer">
				<%= link_to_add_association 'Add Thumbnail', f, :thumbnails, data: {association_insertion_node: '#nested_thumbnails', association_insertion_method: :append}, partial: 'videos/form_thumbs', class: 'btn btn-info btn-xs btn-block' %>
			</footer>
		</div>
	</div>

</div>

<div class="actions">
	<%= f.submit nil, class: 'btn btn-primary' %>
</div>

<% end %>
