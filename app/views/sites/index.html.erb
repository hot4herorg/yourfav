<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Video Count</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @sites.each do |site| %>

		<%= content_tag :tr, class: ( site.enabled ? nil : 'danger' ) do %>
		<td><%= link_to site.name, site %></td>
		<td><%= site.videos.count %></td>
		<td><%= link_to 'Edit', edit_site_path(site) %></td>
		<td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>

		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
