<p id="notice"><%= notice %></p>

<h1>Listing Sites</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>Embed code</th>
      <th>Login address</th>
      <th>Login method</th>
      <th>Ph network</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= site.domain %></td>
        <td><%= site.embed_code %></td>
        <td><%= site.login_address %></td>
        <td><%= site.login_method %></td>
        <td><%= site.ph_network %></td>
        <td><%= site.enabled %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

