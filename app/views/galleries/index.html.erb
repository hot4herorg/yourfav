<p id="notice"><%= notice %></p>

<%= link_to 'New Gallery', new_user_gallery_path(@user) %>

<h1>User Galleries</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>modal</th>
			<th>Name</th>
			<th>User</th>
			<th>Private</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @galleries.each do |gallery| %>
		<tr>
			<td>
				<%= link_to [@user, gallery], data: {toggle: :modal, target: '#gallery-modal'} do %>
				gallery
				<% end %>
			</td>
			<td><%= gallery.name %></td>
			<td><%= gallery.user.email %></td>
			<td><%= gallery.private %></td>
			<td><%= link_to 'Show', [@user, gallery] %></td>
			<td><%= link_to 'Edit', edit_user_gallery_path(@user, gallery) %></td>
			<td><%= link_to 'Destroy', [@user, gallery], method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
