<p id="notice"><%= notice %></p>

<h1>Listing Galleries</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>modal</th>
			<th>Name</th>
			<th>User</th>
			<th>Private</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @galleries.each do |gallery| %>
		<tr>
			<td>
				<%= link_to gallery, data: {toggle: :modal, target: '#gallery-modal'} do %>
				gallery
				<% end %>
			</td>
			<td><%= gallery.name %></td>
			<td><%= gallery.user %></td>
			<td><%= gallery.private %></td>
			<td><%= link_to 'Show', gallery %></td>
			<td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
			<td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

