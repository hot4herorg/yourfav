<p id="notice"><%= notice %></p>

<%= content_tag :h2, @gallery.name %>

<%#= render @gallery.videos %>

<div class="row">
	<% @gallery.videos.each do |video| %>
	<div class="col-sm-6">
		<%= render 'videos/embed', video: video %>
		<%= link_to 'x Gallery', remove_video_from_gallery_path(@gallery, video), class: 'btn btn-sm btn-warning', remote: false, method: :delete if params[:controller] == 'galleries' %>
	</div>
	<% end %>
</div>

<hr>

<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>
